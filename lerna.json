{
  "$schema": "https://raw.githubusercontent.com/lerna-lite/lerna-lite/main/packages/cli/schemas/lerna-schema.json",
  "npmClient": "yarn",
  "version": "0.0.2",
  "packages": ["packages/*", "apps/*"],
  "command": {
    "run": {
      "script": "build",
      "concurrency": 8,
      "parallel": true,
      "loglevel": "info",
      "sort": true,
      "yes": true
    }
  },
  "useWorkspaces": true
}
